<div class="likes-star public">

      <div class="container my-5">
        <div class="row">
          <div class="user-info-container col-12 col-md-3">
          <div class="avatar-wrap">
            <% if find_user.image? %>
              <%= image_tag(find_user.image_url) %>
            <% else %>
              <img src="https://images.plurk.com/43tXxZ1MP3bwW7lyZbunAy.png">
            <% end %>
          </div>
            <h4 class="my-2 user-name">Name：<%= find_user.name%></h4>
            <h4 class="my-2 user-id">ID：<%= find_user.id%></h4>
          </div>
          <div class="repositories-container col-12 col-md-9 row p-3">
            <div class="repositories-title col-12">
              <ul class="nav">
                <li class="nav-item mx-3">
                  <%= link_to "Overview", logged_in_path(user_name: find_user.name), class: "nav-link"%>
                </li>
                <li class="nav-item mx-3">
                  <%= link_to "Repositories #{find_user.repositories.count}", repositories_path, class: "nav-link" %>
                </li>
                <li class="nav-item mx-3">
                  <%= link_to "Following #{find_user.following_users.count}", relationships_path(user_name: find_user.name), class: "nav-link" %>
                </li>
                <li class="nav-item mx-3">
                  <%= link_to "Followers #{find_user.followers.count}", followers_path(user_name: find_user.name), class: "nav-link" %>
                <li class="nav-item mx-3">
                  <%= link_to "Stars #{find_user.liked_repositories.count}", likes_path(user_name: find_user.name), class: "nav-link the-bottom" %>
                </li>
              </ul>
              <div class="line">
                <div class="title-bottom-line"></div>
              </div>
            </div>
            <div class="title-bottom-line"></div>
            <h3 class="col-12 my-3">Like repositories</h3>
              <% @liked_repositories.each do |repo| %>
                <div class="col-12 project-block">
                  <h4><%= link_to repo.title, repository_path(user_name: repo.user.name, id: repo.title) %></h4>
                  <div>Owner : <%= repo.user.name %></div>
                </div>
              <% end %>
          </div>
        </div>
      </div>
</div>