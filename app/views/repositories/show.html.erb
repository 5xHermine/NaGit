<div>
  <%= render "shared/repo_navbar"%>
</div>
</br>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @repository.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @repository.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @repository.user.name %>
</p>

<%= link_to 'Back', repositories_path %>

<% if  @is_file %>
  <%= render "file" %>
<% elsif @dirs == [] && @files == [] %>
  <%= render "how_to_push" %>
<% else %>
  <%= render "dir" %>
<% end %>
