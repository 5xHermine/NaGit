<p id="notice"><%= notice %></p>

<h1>擁有專案</h1>

<table>
  <thead>
    <tr>
      <th>標題</th>
      <th>描述</th>
      <th>姓名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.title %></td>
        <td><%= repository.description %></td>
        <td><%= repository.user.name %></td>
        <td><%= link_to '查看 issue', "http://localhost:3000/#{current_user.name}/#{repository.title}/issues" %></td>
        <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
        <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: '確定刪除？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

