<div class="thisIsIssuesShow enjoy">


    <div>
      <%= render "shared/repo_navbar"%>
    </div>
    </br>
    <div class="row formIput">
      <form class="form-inline my-2 my-lg-0 col-7 col-md-10">
        <input
          class="form-control mr-sm-2 col-12"
          type="search"
          placeholder="目前沒有功能的 Search"
          aria-label="Search"
        />
      </form>
      <%= link_to "New issue", new_repository_issue_path , class:"btn col-5 col-md-2" %>
    </div>

  <% if @issues.length > 0 %>
    <% @issues.each do |issue| %>
    <div class="container">
      <div class="row">
        <div class="col-2 mt-2"><%= issue.status%></div>
        <div class="col-6 row"> 
        <%= link_to issue.name,repository_issue_path(id: issue.id),class:"col-12" %>        
          <p class="col-12">#<%= issue.repository_issue_index %> opened on <%= issue.created_at %></p>

        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center p-5">
      <h3>There aren’t any open issues.</h3>
      <h4>Try to create new issue?</h4>
    </div>
  <% end %>
</div>

<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <%= paginate @issues, window: 2 %>
  </ul>
</nav>
