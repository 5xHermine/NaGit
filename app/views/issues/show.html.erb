<div>
  <%= render "shared/repo_navbar"%>
</div>
<br/>

<div class="container">
  <div class="row">
    <div class="issue-title col-6">
      <div class="issue_name_inactive">
        <h1><%= @issue.name %></h1>
      </div>
      <%= form_for([:repository, @issue],remote: true) do |form|%>
      <div class= "issue_name_active"><%= form.text_field :name%></div> 
    </div>   
    <div class ="issue_button col-6">
      <%= form.button "update", id: "issue_update", class: "btn btn-secondary", type: "submit"%>
      <button id = "issue_edit" class="btn btn-secondary">Edit</button>   
      <% end %> 
    </div>
    <button type="button" class="btn btn-secondary" id="edit-btn">
    </button>
  </div>
</div>

<div class="container mt-5 mb-5 ml-4 col-10">
<div class="card">
  <div class="card-header">
    Developer
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <div class="media">
        <img src="https://picsum.photos/60/60?random=1" class="mr-3" alt="...">
        <div class="media-body">
          <div class="row">
            <div class="issue_description col-8">
              <div class="issue_description_inactive">
                <%= @issue.description %>
              </div>
              <%= form_for([:repository, @issue],remote: true) do |form|%>
              <div class= "issue_description_active"><%= form.text_area :description ,type: "text_area" %></div> 
            </div>   
            <div class ="issue_description_button col-4">
              <%= form.button "update", id: "issue_description_update", class: "btn btn-secondary", type: "submit"%>
              <button id = "issue_description_edit" class="btn btn-secondary">Edit</button>  
              <% end %> 
            </div> 
          </div>
        </div>
      </div>
    </blockquote>
  </div>
</div>


  
<% @comments.each do |c| %>

  <div class="comment-info-container">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="issue-comment-name col-10">
            <h4><%= c.user.name %></h4> 
          </div>       
          <div class="btn-group">
            <button type="button" class="btn btn-sm btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <div class="dropdown-menu">
              <% if c.user == current_user %>
              <div><%= link_to "delete", repository_issue_comment_path(user_name: c.user.name, repository_id: current_repository.title , issue_id: @issue, id: c), class: "btn comment-delete-button", data: {method: "DELETE", confirm: "Are you sure you want to delete?"} %></div>
              <div class="btn comment-edit-button">Edit</div>
              <% end %>
            </div>       
          </div>
        </div>


      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <div class="media">
            <img src="https://picsum.photos/60/60?random=2" class="mr-3" alt="...">
            <div class="media-body">
              <h4><%= c.content %></h4>
              <h6><%= time_ago_in_words(c.created_at) %> ago </h6>
            </div>
          </div>
        </blockquote>
      </div>
      
      
    </div>
  </div>

  <div class="comment-edit-container" style="display: none;">
    <%= form_with(model: c, url: repository_issue_comment_path(user_name: c.user.name, repository_id: current_repository.title , issue_id: @issue, id: c), method: "PUT") do |f| %>

      <% if c.errors.any? %>
        <ul>
          <% c.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <div class="comment-info-container">
        <div class="card">
          <div class="card-header">
            <div class="row">
              <div class="issue-comment-name col-10">
                <h4><%= c.user.name %></h4> 
              </div>       
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <div class="dropdown-menu">
                  <% if c.user == current_user %>
                  <div><%= link_to "delete", repository_issue_comment_path(user_name: c.user.name, repository_id: current_repository.title , issue_id: @issue, id: c), class: "btn comment-delete-button", data: {method: "DELETE", confirm: "Are you sure you want to delete?"} %></div>
                  <div class="btn comment-edit-button">Edit</div>
                  <% end %>
                </div>       
              </div>
            </div>

          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <div class="media">
                <img src="https://picsum.photos/60/60?random=2" class="mr-3" alt="...">
                <div class="media-body">
                  <h4>
                    <%= f.text_field :content, class: "form-control"%>
                  </h4>
                  <h6><%= time_ago_in_words(c.created_at) %> ago </h6>
                </div>
              </div>
            </blockquote>
            <div class="row">
              <div class="actions">            
                <%= f.submit "Update comment", class: "btn btn-success" %>
              </div>
              <div class="btn btn-danger comment-cancel-button">
                Cancel
              </div>
              </div>
            </div>
          
          
        </div>
      </div>

    <% end %>
  </div>
<% end %>
  

<div class="comment-new-container">
  <%= form_with(model: @comment, url: repository_issue_comments_path(issue_id: @issue), local: true, method: "POST") do |f|%>

    <% if @comment.errors.any? %>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    

    <div class="actions text-area-container">
      <div class="form-group">
        <%= f.label :content, class: "m-0"%>
        <%= f.text_area :content, class: "form-control"%>
        <button type="button" class="btn btn-secondary">
          <%=link_to @issue.toggle_status, toggle_status_repository_issue_path %> 
        </button>
        <%= f.submit "Create comment", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
